<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
android:layout_weight="10">
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintTop_toTopOf="parent" app:contentPadding="2dp"
                                       app:cardCornerRadius="4dp" app:cardBackgroundColor="@color/colorPrimary"
                                       android:layout_marginTop="10dp" android:layout_marginStart="6dp"
                                       android:layout_marginEnd="6dp">
        <VideoView
                android:layout_width="220dp"
                android:layout_height="124dp"
                 android:id="@+id/videoView2" android:layout_weight="1"
                android:layout_gravity="end" android:layout_margin="6dp"/>
        <androidx.cardview.widget.CardView android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           app:contentPadding="4dp"
                                           app:cardCornerRadius="4dp" app:cardBackgroundColor="#EF9A9A"
                                           android:layout_margin="6dp">
            <TextView
                    android:id="@+id/titleField"
                    android:text="Test Title"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content" android:gravity="start" android:textSize="14sp"
                    android:layout_margin="2dp"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>